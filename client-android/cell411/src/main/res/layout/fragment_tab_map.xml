<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        />

    <RelativeLayout
        android:id="@+id/rl_radial_menu"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="UselessLeaf"
                android:id="@+id/sys_info"
                />

        <RelativeLayout
            android:id="@+id/rl_outer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            >

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_criminal"
                android:layout_width="131dp"
                android:layout_height="65dp"
                android:layout_marginStart="73dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/slice_criminal"
                app:tag="Crime"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_pulled_over"
                android:layout_width="107dp"
                android:layout_height="108dp"
                android:layout_marginStart="185dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/slice_pulled_over"
                app:tag="PulledOver"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_police_interaction"
                android:layout_width="67dp"
                android:layout_height="132dp"
                android:layout_marginStart="233dp"
                android:layout_marginTop="101dp"
                android:src="@drawable/slice_police_interaction"
                app:tag="CopBlocking"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_police_arrest"
                android:layout_width="120dp"
                android:layout_height="96dp"
                android:layout_marginStart="156dp"
                android:layout_marginTop="203dp"
                android:src="@drawable/slice_police_arrest"
                app:tag="Arrested"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_panic_button"
                android:layout_width="124dp"
                android:layout_height="84dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="215dp"
                android:src="@drawable/slice_panic_button"
                app:tag="Panic"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_danger"
                android:layout_width="78dp"
                android:layout_height="126dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="128dp"
                android:src="@drawable/slice_danger"
                app:tag="Danger"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_medical"
                android:layout_width="99dp"
                android:layout_height="115dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/slice_medical"
                app:tag="Medical"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_inner"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_centerInParent="true"
            android:visibility="visible"
            >

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_being_bullied"
                android:layout_width="102dp"
                android:layout_height="74dp"
                android:layout_marginStart="123dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/slice_being_bullied"
                app:tag="Bullied"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_general"
                android:layout_width="70dp"
                android:layout_height="103dp"
                android:layout_marginStart="182dp"
                android:layout_marginTop="78dp"
                android:src="@drawable/slice_general"
                app:tag="General"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_photo"
                android:layout_width="91dp"
                android:layout_height="88dp"
                android:layout_marginStart="158dp"
                android:layout_marginTop="162dp"
                android:src="@drawable/slice_photo"
                app:tag="Photo"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_video"
                android:layout_width="100dp"
                android:layout_height="72dp"
                android:layout_marginStart="77dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/slice_video"
                app:tag="Video"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_fire"
                android:layout_width="73dp"
                android:layout_height="102dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="122dp"
                android:src="@drawable/slice_fire"
                app:tag="Fire"
                />

            <cell411.ui.map.PolygonImageView
                android:id="@+id/img_broken_car"
                android:layout_width="92dp"
                android:layout_height="90dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="51dp"
                android:src="@drawable/slice_broken_car"
                app:tag="BrokenCar"
                />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_location_center_enabled"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/img_location_center_enabled"
        android:contentDescription="@string/location_center_toggle"
        android:padding="8dp"
        android:src="@drawable/img_loc_center"
        />

    <ImageView
        android:id="@+id/img_patrol_mode_enabled"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/img_patrol_mode"
        android:contentDescription="@string/patrol_mode_toggle"
        android:padding="8dp"
        android:src="@drawable/img_loc_center"
        />

</RelativeLayout>
