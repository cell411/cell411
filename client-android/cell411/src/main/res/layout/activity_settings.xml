<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/txt_btn_video_settings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/ripple_btn_primary"
            android:gravity="center"
            android:text="@string/btn_video_settings"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="30dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dark_mode"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dark_mode_description"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_dark_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/dark_mode_button"
                android:src="@drawable/fab_dark_mode"
                app:fabSize="normal"
                tools:ignore="RelativeOverlap"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="30dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_new_public_cell_alert"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_new_public_cell_alert_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_new_public_cell_alert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/new_public_cell_alert_button"
                android:src="@drawable/fab_new_public_cell_enabled"
                app:fabSize="normal"
                tools:ignore="RelativeOverlap"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="30dp"
                    android:text="@string/title_patrol_mode"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="30dp"
                    android:text="@string/txt_patrol_mode_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray_b1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_setting"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:text="@string/title_patrol_mode_radius"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/txt_lbl_patrol_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:paddingStart="30dp"
                        android:paddingEnd="30dp"
                        android:text="@string/patrol_range"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_setting"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_patrol_radius"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_patrol_radius"
                        android:gravity="center"
                        android:text="@string/patrol_radius"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        />

                    <SeekBar
                        android:id="@+id/sb_patrol_radius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:max="80"
                        android:progress="38"
                        />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_patrol_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/img_patrol_mode"
                app:fabSize="normal"
                tools:ignore="ContentDescription,RelativeOverlap"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_setting"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            >

            <TextView
                android:id="@+id/txt_metric"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/title_metric_selection"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txt_metric_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_metric"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:minHeight="50dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/txt_metric_desc"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_metric_desc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/txt_lbl_miles"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_metric_selected"
                    android:gravity="center"
                    android:text="@string/metric_option_miles"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    />

                <TextView
                    android:id="@+id/txt_lbl_kilometers"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="30dp"
                    android:background="@drawable/bg_metric_un_selected"
                    android:gravity="center"
                    android:text="@string/metric_option_kilometers"
                    android:textColor="@color/gray_333"
                    android:textSize="14sp"
                    />
            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="30dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_delete_video_option"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_delete_video_option_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_delete_video_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@color/text_secondary"
                android:src="@drawable/fab_delete_video_disabled"
                app:backgroundTint="@color/gray_ccc"
                app:fabSize="normal"
                tools:ignore="ContentDescription,RelativeOverlap"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="30dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_gps_accurate_tracking"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_gps_accurate_tracking_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_gps_accurate_tracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@color/text_secondary"
                android:src="@drawable/fab_gps_enabled"
                app:fabSize="normal"
                tools:ignore="ContentDescription,RelativeOverlap"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/bg_setting"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingTop="20dp"
                android:paddingEnd="30dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_location_updates"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/txt_location_updates_desc"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_location_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:background="@color/text_secondary"
                android:contentDescription="@string/location_enable_button"
                android:src="@drawable/img_location_enabled"
                app:backgroundTint="@color/gray_ccc"
                app:fabSize="normal"
                tools:ignore="RelativeOverlap"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_btn_spammed_users"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/ripple_btn_primary"
            android:gravity="center"
            android:text="@string/btn_blocked_users_and_spammers"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txt_btn_download_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/ripple_btn_primary"
            android:gravity="center"
            android:text="@string/btn_download_data"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/txt_btn_delete_account"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/bg_btn_disconnect_from_facebook"
            android:gravity="center"
            android:text="@string/btn_delete_account"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </LinearLayout>
</ScrollView>